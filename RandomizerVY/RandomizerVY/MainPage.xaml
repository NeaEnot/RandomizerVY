<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RandomizerVY.MainPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Gray">
            <Frame BackgroundColor="White" Margin="0, 10, 0, 0" HeightRequest="40">
                <Label Text="ЧИСЛО" FontSize="25"/>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Number_Tapped"/>
                </Frame.GestureRecognizers>
            </Frame>
            <Frame BackgroundColor="White" Margin="0, 5, 0, 0" HeightRequest="40">
                <Label Text="СПИСОК" FontSize="25"/>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
